[flake8]
max-line-length = 127
exclude =
    .git,
    __pycache__,
    */migrations/*,
    */venv/*,
    .venv,
    .env,
    node_modules,
    dist,
    build,
    health_check.py

# Critical errors & maintainable code
select = E9, F, C90, B, S

# Ignore things handled by Black or legacy issues
ignore = E203, W503

# Complexity limit
max-complexity = 15

# Per-file ignores (optional for legacy code)
per-file-ignores =
    __init__.py:F401
    settings*.py:E501,F403,F405